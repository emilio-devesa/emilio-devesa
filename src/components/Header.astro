---
const navLinks = [
  { href: "#sobre-mi", label: "Quién soy" },
  { href: "#clases", label: "Clases de batería" },
  { href: "#compromiso", label: "Mi compromiso" },
  { href: "#music", label: "Discografía" },
  { href: "#contact", label: "Contacto" },
];
---
<header>
    <nav>
        <a href="/">Emilio Devesa</a>
    </nav>
    
    <nav>
        <button class="menu-toggle" id="menu-toggle" aria-label="Abrir menú">☰</button>


        <div class="nav-links" id="nav-links">
            {navLinks.map(link => (
                <a href={link.href}>{link.label}</a>
            ))}
        </div>
    </nav>

    <script type="text/javascript" is:inline>
        document.addEventListener("DOMContentLoaded", function () {
            const toggle = document.getElementById("menu-toggle");
            const nav = document.getElementById("nav-links");

            toggle.addEventListener("click", () => {
                nav.classList.toggle("menu-open");
                toggle.textContent = nav.classList.contains("menu-open") ? "✕" : "☰";
            });
        });
    </script>

</header>